        ${complianceHtml ? `
          <div class="section">
            <h2>Compliance Checks</h2>
            ${complianceHtml}
          </div>
        ` : ''}
        
        ${recommendationsHtml ? `
          <div class="section">
            <h2>Recommendations</h2>
            <p>For detailed remediation steps, access the recommendation resources:</p>
            <ul>
              ${recommendationsHtml}
            </ul>
          </div>
